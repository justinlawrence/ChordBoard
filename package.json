{
  "name": "chordboard",
  "version": "1.0.0",
  "private": true,
  "description": "An open-source chord sheet manager for live musicians.",
  "config": {
    "port": 8080
  },
  "scripts": {
    "api": "node src/server",
    "dev-server": "webpack-dev-server --env=dev --progress --hot --inline",
    "start": "npm run dev-server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "npm run build && rsync -azP --delete ./build/ irjweb:/var/www/chordboard",
    "deploy-cloudnode": "npm run build && rsync -azP --exclude=.git --delete ./build/ /var/www/chordboard-cloudnode && git -C /var/www/chordboard-cloudnode add . && git -C /var/www/chordboard-cloudnode commit -m \"auto-build\" && git -C /var/www/chordboard-cloudnode push origin master",
    "build": "webpack -p --env=prod --progress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justinlawrence/chordboard.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/justinlawrence/chordboard/issues"
  },
  "homepage": "https://github.com/justinlawrence/chordboard#readme",
  "dependencies": {
    "body-parser": "^1.17.2",
    "bulma": "^0.5.1",
    "copy-webpack-plugin": "^4.0.1",
    "cors": "^2.8.4",
    "express": "^4.15.4",
    "pouchdb": "^6.3.4",
    "pouchdb-find": "^6.3.4",
    "preact": "^8.2.4",
    "preact-router": "^2.5.7",
    "slugify": "^1.2.1",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.5",
    "extract-text-webpack-plugin": "^3.0.0",
    "fauxton": "^1.1.13",
    "html-webpack-plugin": "^2.30.1",
    "img-loader": "^2.0.0",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0"
  }
}
